{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Extension",
            "group": "build",
            "type": "npm",
            "script": "build",
            "path": "kuiper-vscode/",
            "problemMatcher": {
                "base": "$tsc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/kuiper-vscode/"
                ]
            }
        },
        {
            "label": "Build Server",
            "group": "build",
            "type": "shell",
            "command": "cargo build --package kuiper_lsp --release",
            "problemMatcher": "$rustc"
        },
        {
            "label": "Build Server and Extension",
            "dependsOn": [
                "Build Server",
                "Build Extension"
            ],
            "problemMatcher": "$rustc"
        },
    ]
}